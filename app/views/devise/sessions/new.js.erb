var title       =   '.modal-title',
    loader      =   '.ajax-loader',
    content     =   '.modal-body-content',
    dataRemote  =   'a[data-remote=true]',
    toolbar     =   'div.modal-footer',
    modal       =   '#ajax-modal';

//i set the title through a helper function
$(title).html('Log In');
//hides the modal and shows the ajax content
$(loader).fadeToggle('fast', function() {
  $(loader).fadeOut('slow');
  $(content).html('<%= j( render "new" ) %>');
  $(toolbar).html('<%= j(render "devise/shared/links" ) %>');
  $(modal).modal();
});

$(content).on('click', 'a[data-remote=true]', function(){
  $(content).fadeOut('slow', function() {
    $('.ajax-loader').fadeIn('slow');
  });
});