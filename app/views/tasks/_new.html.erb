<%= form_for(@task, html: {class: "form-inline", role: "form", id: "for_project_id_#{project_id}"}, remote: true)  do |f| %>
 <div class="form-group">
	  <span class="glyphicon glyphicon-plus"></span>
	  <%= f.text_field  :name, class: "form-control", id: "task_name_project_id_#{project_id}",  placeholder: "Start typing here to create a task" %>
	  <%= f.text_field  :deadline, class: "form-control", id: "task_deadline_project_id_#{project_id}", placeholder: "Deadline for task" %>
	  <%= f.submit "Add Task",  class: "btn btn-success" %>
  </div>
<% end %>