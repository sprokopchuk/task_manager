<%= form_for(@task, html: {class: "form-inline", role: "form"}, remote: true )  do |f| %>
 <div class="form-group">
	  <span class="glyphicon glyphicon-plus"></span>
	  <%= f.text_field  :name, class: "form-control",  placeholder: "Start typing here to create a task" %>
	  <% deadline_value = @task.deadline.strftime('%d/%m/%Y') unless @task.deadline.blank? %>
	  <%= f.text_field  :deadline, value: "#{deadline_value}", class: "form-control", placeholder: "Deadline for task" %>
	  <%= f.submit "Update Task",  class: "btn btn-success" %>
  </div>
<% end %>